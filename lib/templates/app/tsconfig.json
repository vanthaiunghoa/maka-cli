{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "jsx": "react",
    "allowJs": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "experimentalDecorators": true
  },
  "include": [
    "client/**/*"
  ],
  "exclude": [
    ".meteor",
    "node_modules"
  ]
}